@model BurgerMVCBoost.ViewModel.AllMenuVM
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_BurgerLayout2.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <div class="card mb-3">
            <img src="@Model.Menu.Image" class="card-img-top" alt="Whopper">
            <div class="card-body">
                <h5 class="card-title">@Model.Menu.Name</h5>
                <p class="card-text">@Model.Menu.Description</p>
                <p class="card-text text-muted">Fiyat: @Model.Menu.Price</p>
                <button type="button" class="btn btn-warning btn-block">Sepete Ekle</button>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">İçecekler</h5>
                <select name="cars" id="cars">
                    @foreach (var item in Model.Drinks)
                    {
                        <option value="@item">@item.Name (@item.Price)</option>
                    }
                </select>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Soslar</h5>
                <select name="cars" id="cars">
                    @foreach (var item in Model.Sauces)
                    {
                        <option value="@item">@item.Name (@item.Price)</option>
                    }
                </select>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Yan Ürünler</h5>
                <select name="cars" id="cars">
                    @foreach (var item in Model.Extras)
                    {
                        <option value="@item">@item.Name (@item.Price)</option>
                    }
                </select>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Tatlılar</h5>
                <select name="cars" id="cars">
                    @foreach (var item in Model.Desserts)
                    {
                        <option value="@item">@item.Name (@item.Price)</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>

